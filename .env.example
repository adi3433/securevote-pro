# SecureVote Pro - Environment Configuration Template
# Copy this file to .env and customize your settings

# Environment Mode
DEVELOPMENT_MODE=true
DEMO_MODE=true

# Security (IMPORTANT: Change these in production!)
SECRET_KEY=your-secret-key-change-in-production

# SMTP Configuration (for sending OTP emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password

# Database
DATABASE_URL=sqlite:///./voting_system.db

# Redis (removed - using in-memory OTP storage)
# REDIS_URL=redis://localhost:6379

# Bloom Filter Settings
BLOOM_FILTER_SIZE=100000
BLOOM_FILTER_HASH_COUNT=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Voter Salt
VOTER_SALT=voting-system-salt-2024
